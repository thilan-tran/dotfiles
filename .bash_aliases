# .bash_aliases
# =============
# sourced in .bashrc or .zshrc

# useful aliases
alias cl='clear'
alias cat='bat'
alias mat='cmatrix -s'
alias t='tmux'
alias fzf="fzf --preview 'bat --style=numbers --color=always {}'"

# by default, open nvim with startify and tasks
alias vi='nvim_default'
alias vim='nvim_default'
